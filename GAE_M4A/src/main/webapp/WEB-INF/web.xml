<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>GAE_M4A</display-name>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>view</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.ViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view</servlet-name>
        <url-pattern>/MathUnited/view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>view_s</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.ViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view_s</servlet-name>
        <url-pattern>/view_s</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view_s</servlet-name>
        <url-pattern>/MathUnited/view_s</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>viewresult</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.ViewResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewresult</servlet-name>
        <url-pattern>/viewresult</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getbloburl</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.GetBlobURLServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getbloburl</servlet-name>
        <url-pattern>/getbloburl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getresource</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.GetResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getresource</servlet-name>
        <url-pattern>/getresource</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getresource_s</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.GetResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getresource_s</servlet-name>
        <url-pattern>/getresource_s</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>puttextfile</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.PutTextFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>puttextfile</servlet-name>
        <url-pattern>/puttextfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>putxmlfile</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.PutXmlFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>putxmlfile</servlet-name>
        <url-pattern>/putxmlfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>gettextfile</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.GetTextFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gettextfile</servlet-name>
        <url-pattern>/gettextfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>putresource</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.PutResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>putresource</servlet-name>
        <url-pattern>/putresource</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>clean</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.CleanDataStoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clean</servlet-name>
        <url-pattern>/clean</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>encodeBase64</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.GeogebraGenerator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>encodeBase64_s</servlet-name>
        <url-pattern>/geogebra_s</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>encodeBase64_s</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.GeogebraGenerator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>encodeBase64</servlet-name>
        <url-pattern>/geogebra</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>storage</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.StorageProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>storage</servlet-name>
        <url-pattern>/storage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getResourceUrl</servlet-name>
        <servlet-class>nl.math4all.gae_m4a.GetResourceUrlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getResourceUrl</servlet-name>
        <url-pattern>/getresourceurl</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secure</web-resource-name>
            <url-pattern>/geogebra_s</url-pattern>
            <url-pattern>/getresource_s</url-pattern>
            <url-pattern>/view_s</url-pattern>
            <url-pattern>/MathUnited/view_s</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint> 
    <filter>
        <filter-name>appstats</filter-name>
        <filter-class>com.google.appengine.tools.appstats.AppstatsFilter</filter-class>
        <init-param>
            <param-name>logMessage</param-name>
            <param-value>Appstats available: /appstats/details?time={ID}</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>appstats</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>appstats</servlet-name>
        <servlet-class>com.google.appengine.tools.appstats.AppstatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appstats</servlet-name>
        <url-pattern>/appstats/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/appstats/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
                
</web-app>
